{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
 {{#with main}}
    <main>
        <section>
        {{> title data="Work history" big=true}}
            <div>
                <ul>
                {{#each works}}
                   <li>
                    <div>{{position}}</div>

                    <br>

                    <div>
                        {{duratione.from}} - 
                        {{#if duratione.to}} 
                             {{duratione.to}} 
                          {{else}}
                            (досі працюю) 
                         {{/if}}
                      </div>

                    <br>

                    <div><b>{{> link text=company.name href=company.url blank=true noLine=true}}</b></div>
                   
                    <br>
                    <br>
                    
                    <div>
                        <strong>Projects ({{projectAmount}})</strong>
                    </div>

                    <br>

                    <ul>
                        {{#each projects}}
                        <li>
                            <div>{{> link text=name href=url blank=true noLine=true}}</div>
                            <div>
                                <p>
                                  {{about}} 
                                </p>
                            </div>
                                  <br>
                                  <em>“Project stacks”({{stacksAmount}})</em>
                                  <br>
                                 <div>
                                    <ul>
                                  {{#each stacks}}
                                  <li>
                                  {{name}} 
                                  </li>
                                  {{/each}}
                                  </ul>
                                </div>
                                 <br>
                                 <em>“Project awards”</em>
                                <div>
                                    <ul>
                                   {{#each awards}}
                                  <li>
                                  {{name}}
                                  </li>
                                  {{/each}}
                                  </ul>
                                </div>
                        </li>
                        {{/each}}
                    </ul>
                   </li>
                   <br>
                 {{/each}}
                 </ul>
            </div>
        </section>
    {{/with}}
</div>

